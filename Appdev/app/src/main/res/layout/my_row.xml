<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rowLayout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <TextView
                android:id="@+id/sample_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sample_initials_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="of"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/sample_id_txt"
                app:layout_constraintTop_toTopOf="@+id/sample_id_txt" />

            <TextView
                android:id="@+id/sample_lastName_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fadahunsi"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/sample_initials_txt"
                app:layout_constraintTop_toBottomOf="@+id/sample_initials_txt" />

            <TextView
                android:id="@+id/sample_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10122021"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/sample_lastName_txt"
                app:layout_constraintTop_toBottomOf="@+id/sample_lastName_txt" />

            <TextView
                android:id="@+id/sample_age_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01081997"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@+id/sample_date_txt"
                app:layout_constraintTop_toBottomOf="@+id/sample_date_txt" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>